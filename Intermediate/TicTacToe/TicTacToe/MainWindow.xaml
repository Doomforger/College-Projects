<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="Tic Tac Toe" Height="450" Width="381.936">

    <Grid x:Name="GameGrid" Margin="0,0,2,0" RenderTransformOrigin="1.131,0.63">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="119*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="339" Margin="17,63,0,0" VerticalAlignment="Top" Width="352" Source="Pics/tictactoegrid.png"/>
        <Button x:Name="b1" Content="-" HorizontalAlignment="Left" Margin="40,86,0,0" VerticalAlignment="Top" Width="80" Height="80" Click="Button_Click" Grid.ColumnSpan="2" BorderBrush="White" Background="White"/>
        <Button x:Name="b2" Content="-" HorizontalAlignment="Left" Margin="13,86,0,0" VerticalAlignment="Top" Width="80" Height="80" Click="Button_Click" Grid.Column="2" BorderBrush="White" Background="White"/>
        <Button x:Name="b3" Content="-" HorizontalAlignment="Left" Margin="121,86,0,0" VerticalAlignment="Top" Width="80" Height="80" Click="Button_Click" Grid.Column="2" BorderBrush="White" Background="White"/>
        <Button x:Name="b4" Content="-" HorizontalAlignment="Left" Margin="40,191,0,0" VerticalAlignment="Top" Width="80" Height="80" Click="Button_Click" Grid.ColumnSpan="2" BorderBrush="White" Background="White"/>
        <Button x:Name="b5" Content="-" HorizontalAlignment="Left" Margin="12.655,191,0,0" VerticalAlignment="Top" Width="80" Height="80" Click="Button_Click" Grid.Column="2" BorderBrush="White" Background="White"/>
        <Button x:Name="b6" Content="-" HorizontalAlignment="Left" Margin="121,191,0,0" VerticalAlignment="Top" Width="80" Height="80" Click="Button_Click" Grid.Column="2" BorderBrush="White" Background="White"/>
        <Button x:Name="b7" Content="-" HorizontalAlignment="Left" Margin="40,299,0,0" VerticalAlignment="Top" Width="80" Height="80" Click="Button_Click" Grid.ColumnSpan="2" BorderBrush="White" Background="White"/>
        <Button x:Name="b8" Content="-" HorizontalAlignment="Left" Margin="13,299,0,0" VerticalAlignment="Top" Width="80" Height="80" Click="Button_Click" Grid.Column="2" BorderBrush="White" Background="White"/>
        <Button x:Name="b9" Content="-" HorizontalAlignment="Left" Margin="121,299,0,0" VerticalAlignment="Top" Width="80" Height="80" Click="Button_Click" Grid.Column="2" BorderBrush="White" Foreground="Black" Background="White"/>
        <Label x:Name="Status" Content="Turn:" HorizontalAlignment="Left" Margin="43,22,0,0" VerticalAlignment="Top" Width="286" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
